{
  "name": "screen-recorder",
  "version": "2.3.0",
  "description": "A app to capture the screen",
  "keywords": [],
  "license": "MIT",
  "author": "Renan Pereira <renanmol87@gmail.com>",
  "main": "./dist/main.js",
  "scripts": {
    "build": "rimraf dist && npm-run-all -p build:electron",
    "build:electron": "cross-env NODE_ENV=production webpack --config webpack/electron.webpack.js",
    "dev:electron": "cross-env NODE_ENV=development webpack --config webpack/electron.webpack.js && electron .",
    "postinstall": "electron-builder install-app-deps",
    "lint": "eslint --ext .js electron/ src/",
    "package": "yarn build && electron-builder build --publish never",
    "test": "jest"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{js}": [
      "eslint --fix"
    ],
    "package.json": [
      "sort-package-json"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "electron-squirrel-startup": "^1.0.0",
    "npm-run-all": "^4.1.5"
  },
  "devDependencies": {
    "@babel/core": "^7.12.9",
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "babel-loader": "^8.2.2",
    "commitizen": "^4.2.2",
    "cross-env": "^7.0.2",
    "cz-conventional-changelog": "^3.3.0",
    "electron": "10.1.3",
    "electron-builder": "^22.9.1",
    "eslint": "^7.13.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-config-standard": "^16.0.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-promise": "^4.2.1",
    "husky": "^4.3.6",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.3",
    "prettier": "^2.1.2",
    "rimraf": "^3.0.2",
    "sort-package-json": "^1.48.0",
    "spectron": "^12.0.0",
    "typescript": "^4.1.3",
    "webpack": "^5.10.0",
    "webpack-cli": "^4.2.0"
  },
  "build": {
    "appId": "com.r3nanp.screen-recorder",
    "productName": "Screen Recorder",
    "files": [
      "src/",
      "dist/",
      "electron"
    ],
    "win": {
      "target": [
        "portable"
      ]
    },
    "mac": {
      "category": "public.app-category.utility-tools"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Utility"
    },
    "directories": {
      "buildResources": "build",
      "output": "out"
    }
  },
  "productName": "Screen Recorder"
}
